<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gary">

    <include layout="@layout/layout_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医废信息"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/linearlayout_background_info_area"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收集人员"
                android:textSize="13sp"
                android:textColor="#333333"
                android:padding="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a1a1a1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科室名称"
                android:textSize="13sp"
                android:textColor="#333333"
                android:padding="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a1a1a1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科室人员"
                android:textSize="13sp"
                android:textColor="#333333"
                android:padding="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a1a1a1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医废重量"
                android:textSize="13sp"
                android:textColor="#333333"
                android:padding="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a1a1a1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医废类型"
                android:textSize="13sp"
                android:textColor="#333333"
                android:padding="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医废桶编号"
                android:textSize="13sp"
                android:textColor="#333333"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:visibility="invisible"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:button="@null"
                    android:background="@drawable/wastetype_selector_1"
                    android:layout_marginRight="7dp"/>
                <CheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:button="@null"
                    android:background="@drawable/wastetype_selector_2"
                    android:layout_marginRight="7dp"/>
                <CheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:button="@null"
                    android:background="@drawable/wastetype_selector_3"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医废桶编号"
                android:textSize="13sp"
                android:textColor="#333333"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:visibility="invisible"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/checkbox4"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:button="@null"
                    android:background="@drawable/wastetype_selector_4"
                    android:layout_marginRight="7dp"/>
                <CheckBox
                    android:id="@+id/checkbox5"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:button="@null"
                    android:background="@drawable/wastetype_selector_5"
                    android:layout_marginRight="7dp"/>
                <CheckBox
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:button="@null"
                    android:background="@drawable/wastetype_selector_3"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="打印标签"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:layout_margin="10dp"
        android:background="@drawable/button_background_green_corner"/>

</LinearLayout>