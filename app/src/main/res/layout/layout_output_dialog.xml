<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_gary_corner"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="医废桶编号"
            android:textSize="14sp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/tv_bucket_guid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:lines="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#a1a1a1"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="入库净重"
            android:textSize="14sp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/tv_bucket_inputweigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:lines="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#a1a1a1"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="出库毛重"
            android:textSize="14sp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/tv_bucket_outputweigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:lines="1"
            android:clickable="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#a1a1a1"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="重量偏差"
            android:textSize="14sp"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/tv_bucket_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:lines="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#a1a1a1"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center"
            android:clickable="true"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#a1a1a1"/>
        <TextView
            android:id="@+id/dialog_btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center"
            android:clickable="true"/>
    </LinearLayout>

</LinearLayout>