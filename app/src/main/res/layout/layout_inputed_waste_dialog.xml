<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_gary_corner">
    <TextView
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="已入库医废"
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#a1a1a1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医废信息："
                android:textSize="12sp"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/tv_wastetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医废类型"
                android:textSize="12sp"
                android:textColor="#333333"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ( "
                android:textSize="12sp"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/tv_wasteweigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0kg"
                android:textSize="12sp"
                android:textColor="#333333"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ) "
                android:textSize="12sp"
                android:textColor="#333333"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医废编号："
                android:textSize="12sp"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/tv_wastenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#333333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收集时间："
                android:textSize="12sp"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/tv_wastetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#333333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科室信息："
                android:textSize="12sp"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/tv_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#333333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="操作人员："
                android:textSize="12sp"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/tv_collectpreson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#333333"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#a1a1a1"
        android:layout_marginTop="3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="#333333"
            android:gravity="center"
            android:clickable="true"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#a1a1a1"/>
        <TextView
            android:id="@+id/dialog_btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除"
            android:textSize="14sp"
            android:textColor="#333333"
            android:gravity="center"
            android:clickable="true"/>
    </LinearLayout>

</LinearLayout>
